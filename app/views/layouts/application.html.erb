<!DOCTYPE html>
<html>
  <head>
    <title>Maker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class=' container-fluid'>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

      </div>


      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to root_path do %><i class="fa fa-home"></i> <% end %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">

              <li><%= link_to "auth/facebook" do %><i class="fa fa-facebook"></i><% end %></li>
              <li><%= link_to "auth/twitter" do %><i class="fa fa-twitter"></i><% end %></li>
              <li><%= link_to "auth/vkontakte" do %><i class="fa fa-vk"></i><% end %></li>
        </ul>
      </div>
    </div>
  </nav>

  <%= yield %>
  </body>
</html>
