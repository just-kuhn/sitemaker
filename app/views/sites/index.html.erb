<p id="notice"><%= notice %></p>
<div style="margin-top: 5%; margin-left: 40%">
<h1>Sites</h1>
<h2><%= flash[:alert] %></h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tags</th>
      <th>Logo url</th>
      <th>Theme</th>
      <th>Menu</th>
      <th>Temp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.title %></td>
        <td><%= site.tags %></td>
        <td><%= site.logo_url %></td>
        <td><%= site.theme_id %></td>
        <td><%= site.menu_id %></td>
        <td><%= site.temp_id %></td>
        <td><%= link_to 'Show', site %></td>
        <% if can? :update, site %>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
            <% end %>
        <% if can? :destroy, site %>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<%= link_to 'New Site', new_site_path %>
      <% end %>
</div>